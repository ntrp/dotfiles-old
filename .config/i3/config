# resize window (you can also use the mouse for that)
mode " ÔÅ•  resize" {
        # These bindings trigger as soon as you enter the resize mode
	set $gap 1
	set $gapMid 10
	set $gapBig 100

    bindsym Left resize shrink width $gapBig px or $gapBig ppt
    bindsym $mod+Left resize shrink width $gapMid px or $gapMid ppt
    bindsym $mod+Shift+Left resize shrink width $gap px or $gap ppt

    bindsym Down resize grow height $gapBig px or $gapBig ppt
    bindsym $mod+Down resize grow height $gapMid px or $gapMid ppt
    bindsym $mod+Shift+Down resize grow height $gap px or $gap ppt

    bindsym Up resize shrink height $gapBig px or $gapBig ppt
    bindsym $mod+Up resize shrink height $gapMid px or $gapMid ppt
    bindsym $mod+Shift+Up resize shrink height $gap px or $gap ppt

    bindsym Right resize grow width $gapBig px or $gapBig ppt
    bindsym $mod+Right resize grow width $gapMid px or $gapMid ppt
    bindsym $mod+Shift+Right resize grow width $gap px or $gap ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode " ÔÅ•  resize"

